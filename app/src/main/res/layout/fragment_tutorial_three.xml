<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/tutorial_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#1ab289" />

    <ImageView
        android:id="@id/mountain_night"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="110.0dip"
        android:src="@drawable/tutorial_night" />

    <ImageView
        android:id="@id/rain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="110.0dip"
        android:src="@drawable/rain" />

    <TextView
        android:id="@id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/rain"
        android:paddingLeft="@dimen/tutorial_horizontal_padding"
        android:paddingRight="@dimen/tutorial_horizontal_padding"
        android:paddingTop="150dp"
        android:text="@string/tutorial_three_text"
        android:textColor="#ffffffff"
        android:textSize="@dimen/tutorial_text_size" />
</RelativeLayout>