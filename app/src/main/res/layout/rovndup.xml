<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/roundup">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#2b2f38">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/investo_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Roundups"
                android:id="@+id/btnp"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:textColor="#FFFFFF"
                android:layout_below="@id/imageView2"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        android:layout_weight="0.06"
        android:fillViewport="false"
        android:id="@+id/hh">

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="10dp"
                android:id="@+id/hh">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="  0.8"
                    android:textSize="35dp"
                    android:id="@+id/transaction"
                    android:textColor="#880E4F"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView13"
                    android:layout_toEndOf="@+id/textView13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                    android:text="Flipcart purchasing"
                    android:id="@+id/just_view"
                    android:textColor="@color/background_material_dark"
                    android:gravity="left"
                    android:layout_below="@+id/transaction"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentStart="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/just_view"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"
                    android:id="@+id/bbb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="\u20B9"
                    android:textSize="35dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView13"
                    android:layout_above="@+id/just_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_deposit"
                    android:layout_above="@+id/just_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                    android:text="20/03/2016 22:33"
                    android:id="@+id/textView16"
                    android:textColor="@color/background_material_dark"
                    android:gravity="left"
                    android:layout_below="@+id/imageView7"
                    android:layout_alignRight="@+id/imageView7"
                    android:layout_alignEnd="@+id/imageView7" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
